html(lang='en')
head
	title= 'User Registration'
	link(href='/css/styles.css', rel='stylesheet')
body
	.container
		.row
			.col-md-6.col-md-offset-3
			h1.display-4.m-b-2 Log In
			form(method='POST' enctype='multipart/form-data' action='/adduser')
				div.form-group
				label(fro='firstname') First name
				input.form-control(type='text' id='first_name' placeholder='First Name' name='first_name')
				div.form-group
				label(fro='lastname') Last name
				input.form-control(type='text' id='last_name' placeholder='Last Name' name='last_name')
				div.form-group
				label(fro='username') User name
				input.form-control(type='text' id='username' placeholder='Last Name' name='username')
				div.form-group
				label(for='email') Email
				input.form-control(type='text' id='email' placeholder='E-mail Address' name='email')
				div.form-group
				label(for='password') Password
				input.form-control(type='password' id='passw' placeholder='Pls Enter password' name='passw')
				div.form-group
				label(for='confrim-password') Confirm password
				input.form-control(type='password' id='confirm_passw' placeholder='Pls Enter Confirm password' name='confirm_passw')
				div.form-group
				label(for='city') City
				input.form-control(type='text' id='city' placeholder='City' name='city')
				div.form-group
				label(for='country') Country
				input.form-control(type='text' id='country' placeholder='Country' name='country')
				div.form-group
				label(for='file') Image
				input(type='file', name='imageupload')
				button.btn.btn-primary(type='submit') Log in 